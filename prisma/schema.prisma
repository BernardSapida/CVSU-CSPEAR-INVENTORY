// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider              = "zod-prisma"
  output                = "./zod" 
  relationModel         = true 
  modelCase             = "camelCase" 
  modelSuffix           = "Schema" 
  useDecimalJs          = true 
  prismaJsonNullability = true 
}

datasource db {
  provider = "mongodb"
  // relationMode = "prisma"
  url      = env("DATABASE_URL")
}


model Users {
  id              String      @id @map("_id")
  given_name      String
  family_name     String
  email           String      @unique
}